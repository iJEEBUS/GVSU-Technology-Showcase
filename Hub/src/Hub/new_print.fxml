<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.DatePicker?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/8.0.121"
          fx:controller="Hub.new_print_controller"
          fx:id="new_print"
          stylesheets="@new_print.css">

    <!-- Entire Pane Layout -->
    <columnConstraints>
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
        <ColumnConstraints percentWidth="25" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints percentHeight="25" />
        <RowConstraints percentHeight="25" />
        <RowConstraints percentHeight="25" />
        <RowConstraints percentHeight="25" />
    </rowConstraints>

    <!-- Header Components -->
    <Label text="New Print Order"
           fx:id="title_lbl"
           GridPane.halignment="CENTER"
           GridPane.valignment="TOP"
           GridPane.columnIndex="0"
           GridPane.columnSpan="4"
           GridPane.rowIndex="0" />

    <Button text="Return"
            fx:id="back_btn"
            onAction="#returnToHub"
            GridPane.halignment="LEFT"
            GridPane.valignment="TOP"
            GridPane.columnIndex="0"
            GridPane.rowIndex="0">
    </Button>

    <Button text="Submit"
            fx:id="submit_btn"
            onAction="#submitOrder"
            GridPane.halignment="RIGHT"
            GridPane.valignment="TOP"
            GridPane.columnIndex="3"
            GridPane.rowIndex="0" />

    <!-- User Information -->
    <TextField promptText="First name"
               fx:id="user_input"
               GridPane.rowIndex="1"
               GridPane.columnIndex="0"
               GridPane.fillWidth="false" />

    <TextField promptText="Last name"
               fx:id="user_input"
               GridPane.rowIndex="1"
               GridPane.columnIndex="1"
               GridPane.fillWidth="false" />

    <TextField promptText="Email"
               fx:id="user_input"
               GridPane.halignment="CENTER"
               GridPane.rowIndex="2"
               GridPane.columnIndex="0"
               GridPane.columnSpan="2"
               GridPane.fillWidth="true" />

    <!-- Files to Upload -->
    <Button text="Upload 1"
            fx:id="upload_btn"
            GridPane.rowIndex="1"
            GridPane.columnIndex="2"
            GridPane.fillWidth="True"
            GridPane.fillHeight="True"
            GridPane.halignment="CENTER" />


    <Button text="Upload 2"
            fx:id="upload_btn"
            GridPane.rowIndex="1"
            GridPane.columnIndex="3"
            GridPane.fillWidth="True"
            GridPane.fillHeight="True"
            GridPane.halignment="CENTER" />


    <Button text="Upload 3"
            fx:id="upload_btn"
            GridPane.rowIndex="2"
            GridPane.columnIndex="2"
            GridPane.fillWidth="True"
            GridPane.fillHeight="True"
            GridPane.halignment="CENTER"  />


    <Button text="Upload 4"
            fx:id="upload_btn"
            GridPane.rowIndex="2"
            GridPane.columnIndex="3"
            GridPane.fillWidth="True"
            GridPane.fillHeight="True"
            GridPane.halignment="CENTER"  />


    <!-- Signature -->
    <VBox GridPane.rowIndex="3"
          GridPane.columnIndex="0"
          GridPane.halignment="CENTER"
          GridPane.valignment="CENTER"
          GridPane.columnSpan="4">

        <Label text="Signature"
               fx:id="signature_lbl"
               GridPane.valignment="CENTER"
               GridPane.halignment="CENTER"
               GridPane.fillHeight="True" />

        <TextArea fx:id="signature"
                  GridPane.valignment="CENTER"
                  GridPane.halignment="CENTER" />
    </VBox>
</GridPane>