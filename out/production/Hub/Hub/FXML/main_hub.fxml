<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/8.0.121"
          fx:controller="Hub.Controller"
          fx:id="main_hub"
          stylesheets="@../CSS/Shallots.css">


    <columnConstraints>
        <ColumnConstraints percentWidth="33.33" />
        <ColumnConstraints percentWidth="33.33" />
        <ColumnConstraints percentWidth="33.33" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints percentHeight="25" />
        <RowConstraints percentHeight="25" />
        <RowConstraints percentHeight="25" />
        <RowConstraints percentHeight="25" />
    </rowConstraints>

    <!-- Title -->
    <Label text="Technology Showcase"
           fx:id="title_lbl"
           GridPane.halignment="CENTER"
           GridPane.valignment="TOP"
           GridPane.hgrow="ALWAYS"
           GridPane.columnIndex="0"
           GridPane.columnSpan="3"
           GridPane.rowIndex="0" />

    <!-- Left Panel -->
    <Button text="Print Queue"
            fx:id="print_queue_btn"
            onAction="#showPrintQueue"
            GridPane.fillWidth="true"
            GridPane.halignment="CENTER"
            GridPane.columnIndex="0"
            GridPane.rowIndex="1" />
    <Button text="New Print"
            fx:id="new_print_btn"
            onAction="#showNewPrint"
            GridPane.halignment="CENTER"
            GridPane.columnIndex="0"
            GridPane.rowIndex="2" />

    <!-- Center Panel -->
    <Button fx:id="center_logo_label"
           GridPane.fillWidth="true"
           GridPane.fillHeight="true"
           GridPane.halignment="CENTER"
           GridPane.columnIndex="1"
           GridPane.rowIndex="1"
            GridPane.rowSpan="2" />

    <!-- Right Panel -->
    <Button text="Rental Queue"
            fx:id="rental_queue_btn"
            onAction="#showRentalQueue"
            GridPane.halignment="CENTER"
            GridPane.columnIndex="2"
            GridPane.rowIndex="1" />
    <Button text="New Rental"
            fx:id="new_rental_btn"
            onAction="#showNewRental"
            GridPane.halignment="CENTER"
            GridPane.columnIndex="2"
            GridPane.rowIndex="2" />

    <!-- Time Clock -->
    <Button text="Time Clock"
            fx:id="time_clock_btn"
            onAction="#showTimeClock"
            GridPane.halignment="CENTER"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3" />

</GridPane>